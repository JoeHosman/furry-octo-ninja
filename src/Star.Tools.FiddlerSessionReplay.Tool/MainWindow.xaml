<Window x:Class="Star.Tools.FiddlerSessionReplay.Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <DockPanel LastChildFill="True">
                <StackPanel>
                    <Border Background="LightBlue" >
                       <TextBlock Text="Record new sessions" Margin="0,0,0,5"></TextBlock>
                    </Border>
                    <Border Background="LightBlue" >
                        <TextBlock Text="Find saved session" Margin="0,0,0,5"></TextBlock>
                    </Border>
                </StackPanel>
                <Border Background="Gold">
                    
                    <StackPanel Margin="25,0,0,0" >
                        <TextBlock Text="Content"></TextBlock>
                    </StackPanel>
                </Border>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
