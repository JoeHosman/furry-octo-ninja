<UserControl x:Class="FiddlerRunnerGUI.Controls.ProxyToggleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
        <Button Margin="20 0 10 0 " Width="100" HorizontalAlignment="Left">Turn On</Button>
        <TextBlock Margin="0 5">Proxy:</TextBlock>
        <TextBlock  Margin="5 5" Foreground="DarkRed" DataContext="{Binding }"></TextBlock>
    </StackPanel>
</UserControl>
