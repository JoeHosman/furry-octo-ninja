<Window x:Class="FiddlerRunnerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Margin="20 0 10 0 " Width="100" HorizontalAlignment="Left">Turn On</Button>
            <TextBlock Margin="0 5">Proxy:</TextBlock>
            <TextBlock  Margin="5 5" Foreground="DarkRed">Off</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Margin="10 5">Listening Port:</TextBlock>
            <TextBox Width="40" HorizontalContentAlignment="Center">8877</TextBox>
        </StackPanel>
    </Grid>
</Window>
